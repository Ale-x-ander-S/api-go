# Пример конфигурации для разработки
# Скопируйте в config.env и настройте под свои нужды

# База данных PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=products_db
DB_SSL_MODE=disable

# Redis для кэширования
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# JWT настройки
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24        # Время жизни токена в часах
JWT_REFRESH_EXPIRY_DAYS=7  # Время жизни refresh токена в днях

# Сервер
SERVER_PORT=8080

# Окружение
ENVIRONMENT=development
LOG_LEVEL=debug 